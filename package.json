{
  "name": "freelance-calculator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "next lint && prettier --check \"**/*.{ts,tsx,scss,md}\"",
    "format": "prettier --write \"**/*.{ts,tsx,scss,md}\" && eslint --fix --ext .ts --ext .tsx .",
    "playwright": "playwright test",
    "playwright-dev": "next dev -p 3002",
    "test:ui": "start-server-and-test playwright-dev 3002 playwright",
    "prepare": "husky install",
    "pre-commit": "pnpm test && lint-staged"
  },
  "dependencies": {
    "next": "12.1.5",
    "react": "18.0.0",
    "react-dom": "18.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.21.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@types/node": "17.0.25",
    "@types/react": "18.0.5",
    "@types/react-dom": "18.0.1",
    "axe-playwright": "^1.1.11",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.0",
    "playwright-core": "^1.21.1",
    "prettier": "2.6.2",
    "sass": "^1.50.1",
    "start-server-and-test": "^1.14.0",
    "typescript": "4.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint . --fix"
    ],
    "*.{js,jsx,ts,tsx,scss,json,md}": [
      "prettier --write"
    ]
  }
}
